<div class="d-flex flex-column vh-100 align-items-center gap-5">
<div class="d-flex bg-primary align-items-center w-100 p-3">
  <%= link_to :back do %>
    <i class="fa-solid fa-arrow-left text-white"></i>
  <%end %>
  <h2 class="text-white ms-4">Register</h2>
</div>


<%= form_for(resource, html: {class: "w-100"}, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="">
      <%= f.text_field :name, autofocus: true, placeholder: "Full name", class: 'w-100 p-3' %>
    </div>

  <div class="">

    <%= f.email_field :email, placeholder: "Email",  autocomplete: "email", class: 'w-100 p-3' %>
  </div>

  <div class="">
    <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password", class: 'w-100 p-3' %>
  </div>

  <div>
    <%= f.password_field :password_confirmation, placeholder: "Password confirmation", autocomplete: "new-password", class: 'w-100 p-3' %>
  </div>

  <div class="">
    <%= f.submit "Sign up", class: 'w-100 p-3 btn btn-primary rounded-0 text-white' %>
  </div>
<% end %>

</div>
